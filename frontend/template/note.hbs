
<div class="message">
    {{#if data.message}}
        <div class="block {{data.messageType}}" id="message">
            <div class="block-content clearfix">
                {{data.message}}
            </div>
        </div>
    {{/if}}
</div>
<div class="block">
    <div class="block-content">
        <a href="/?action=dashboard" class="label label-big label-active"">{{translations.dashboardBtn}}</a>
    </div>
</div>

<div class="block block-note">
    <div class="block-header">
        {{getNoteDetailTitle}}
    </div>

    <div class="detail-content">


            <form id="note-form" class="form-style">
                <p>
                   <label for="title">{{translations.noteTitle}} * </label>
                    <input type="text" id="title" name="title" placeholder="{{translations.noteTitle}} *" value="{{data.title}}">
                </p>
                <p>
                   <label for="description">{{ translations.noteDescription }}</label>
                    <textarea id="description" name="description" placeholder="{{ translations.noteDescription }}">{{ data.description }}</textarea>
                </p>

                <p>
                   <label for="dueDate">{{ translations.noteDueDate }}</label>
                    <input type="text" id="dueDate" name="dueDate" placeholder="{{ translations.noteDueDate }} dd.mm.yyyy HH:mm" value="{{dateFormatter data.dueDate}}">
                </p>
                <p>
                    <label>{{ translations.noteImportance }}</label>

                    <span class="importance-container" data-noteid="{{ data.id }}">
                        {{{ showImportance data.importance data.id true }}}
                    </span>
                </p>
            </form>
    </div>
    <div class="block-footer clearfix">
        <div class="pull-left">
            <a href="#" class="label label-big label-active" id="submit">{{ translations.saveBtn }}</a>
            {{#unless data.finishDate}}
                <a href="#" class="label label-big label-done" id="setDone" data-note-id="{{data.id}}">{{ translations.doneBtn }}</a>
            {{/unless}}
        </div>
        <div class="pull-right">
            <a href="#" class="label label-big label-delete" id="delete" data-note-id="{{data.id}}">{{ translations.deleteNoteBtn }}</a>
        </div>
    </div>

</div>

