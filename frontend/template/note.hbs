
<div class="message">
    {{#if data.message}}
        <div class="block {{data.messageType}}" id="message">
            <div class="block-content clearfix">
                {{data.message}}
            </div>
        </div>
    {{/if}}
</div>
<div class="block">
    <div class="block-content">
        <a href="/?action=dashboard" class="btn btn-active">{{translations.dashboardBtn}}</a>
    </div>
</div>

<form id="note-form">
    <p>
        <label for="title">{{translations.noteTitle}} * </label>
        <input type="text" id="title" name="title" value="{{data.title}}">
    </p>
    <p>
        <label for="description">{{ translations.noteDescription }}</label>
        <textarea id="description" name="description">{{ data.description }}</textarea>
    </p>
    <p>
        <label>{{ translations.noteImportance }}</label>

        <span class="importance-container" data-noteid="{{ data.id }}">
            {{{ showImportance data.importance data.id true }}}
        </span>
    </p>
    <p>
        <label for="dueDate">{{ translations.noteDueDate }}</label>
        <input type="text" id="dueDate" name="dueDate" placeholder="dd.mm.yyyy HH:mm" value="{{dateFormatter data.dueDate}}">
    </p>
    <div class="clearfix">
        <div class="pull-left">
            <button type="button" id="submit" class="btn btn-active" >{{ translations.saveBtn }}</button>
            {{#unless data.finishDate}}
                <button type="button" id="setDone" class="btn btn-success" data-note-id="{{data.id}}">{{ translations.doneBtn }}</button>
            {{/unless}}
        </div>
        <div class="pull-right">
            <button type="button" id="delete" class="btn btn-red" data-note-id="{{data.id}}">{{ translations.deleteNoteBtn }}</button>
        </div>
    </div>
</form>

