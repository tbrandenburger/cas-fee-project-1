

<div class="block">
    <div class="block-content">
        <a href="/?action=dashboard" class="btn btn-success">{{ translations.dashboardBtn }}</a>
    </div>
</div>

<form id="note-form">
    <p>
        <label for="title">{{ translations.noteTitle }}</label>
        <input type="text" id="title" name="title" value="{{ data.title }}">
    </p>
    <p>
        <label for="description">{{ translations.noteDescription }}</label>
        <input type="text" id="description" name="description" value="{{ data.description }}">
    </p>
    <p>
        <label>{{ translations.noteImportance }}</label>
        {{#each data.importances}}
            <input type="radio" name="importance" value="{{this}}" {{setSelectedRadio this ../data.importance}} >
        {{/each}}
    </p>
    <p>
        <label for="dueDate">{{ translations.noteDueDate }}</label>
        <input type="text" id="dueDate" name="dueDate" placeholder="dd.mm.yyyy HH:mm" value="{{dateFormatter data.dueDate}}">
    </p>
    <p>
        <button type="button" id="submit" class="btn btn-success">{{ translations.saveBtn }}</button>
        <button type="button" class="btn btn-white">{{ translations.cancelBtn }}</button>
        <button type="button" id="delete" class="btn btn-red" data-note-id="{{data.id}}">{{ translations.deleteNoteBtn }}</button>
    </p>
</form>

