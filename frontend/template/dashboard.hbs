<div class="block">
    <div class="block-content">
        <a href="/?action=add" class="btn btn-success">{{translations.createNoteBtn}}</a>
    </div>
</div>


<div class="block block-note">
    <div class="block-header"><h3></h3></div>



    <ul class="list-group">
        {{#each data}}
        <li class="list-group-item">
            {{ title }}
            {{ description }}
            {{groupNoteByDate}}
        </li>
        {{/each}}
    </ul>

    <div class="block-footer clearfix">
        <div class="button pull-right">
            <a href="/?action=edit&id={{ @key  }}" class="btn btn-success">{{ ../translations.editNoteBtn }}</a>
            <a href="#" class="btn btn-red" onclick="App.DashboardController.deleteNote({{ @key }});return false;">{{ ../translations.deleteNoteBtn }}</a>
        </div>
    </div>
</div>

