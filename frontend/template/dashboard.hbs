<div class="block">
    <div class="block-content">
        <a href="" class="btn btn-success">{{translations.createNoteBtn}}</a>
    </div>
</div>

{{#each data}}
<div class="block block-note">
    <div class="block-header"><h3>{{ title }}</h3></div>
    <div class="block-content">{{ description }}</div>
    <div class="block-footer clearfix">
        <div class="button pull-right">
            <button class="btn btn-success">{{ ../translations.editNoteBtn }}</button>
            <button class="btn btn-red" onclick="App.DashboardController.deleteNote({{@key}})">{{ ../translations.deleteNoteBtn }}</button>
        </div>
    </div>
</div>
{{/each}}
